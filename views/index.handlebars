
  <div class="row">
    <div class="col-sm-12 col-md-6">
    <h2>Not devoured!</h2>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>

    </div>


    <div class="col-sm-12 col-lg-6">
    <h2>Devoured!</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>

<hr>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label>
    <br>
    <input type="radio" name="devoured" value="1" checked> Devoured
    <br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button class="add-burger btn btn-success btn-sm" type="submit">ADD IT!</button>
</form>